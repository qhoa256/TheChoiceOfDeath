<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.effect.DropShadow?>

<VBox alignment="CENTER" prefHeight="600" prefWidth="400" spacing="20.0" 
      style="-fx-background-color: linear-gradient(to bottom, #1a0f0f, #000000);" 
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="client.GUI.LoginController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    
    <ImageView fitHeight="234.0" fitWidth="229.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../../../images/choice_of_death.png" />
        </image>
        <effect>
            <DropShadow color="#ff0000" spread="0.3" />
        </effect>
    </ImageView>
    
    <Label text="Death Choose" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #ff0000;" />
    
    <VBox spacing="5">
        <Label text="Username" style="-fx-font-size: 14px; -fx-text-fill: #ff0000;" />
        <TextField fx:id="usernameField" 
                  prefHeight="40" prefWidth="250" 
                  promptText="Enter if you dare..." 
                  style="-fx-background-color: #2a1f1f; 
                         -fx-text-fill: white;
                         -fx-prompt-text-fill: #666666;
                         -fx-background-radius: 20;" />
    </VBox>
    
    <VBox spacing="5">
        <Label text="Password" style="-fx-font-size: 14px; -fx-text-fill: #ff0000;" />
        <PasswordField fx:id="passwordField" 
                      prefHeight="40" prefWidth="250" 
                      promptText="Your last words..." 
                      style="-fx-background-color: #2a1f1f;
                             -fx-text-fill: white;
                             -fx-prompt-text-fill: #666666;
                             -fx-background-radius: 20;" />
    </VBox>
    
    <Button onAction="#handleLogin" 
            prefHeight="40" prefWidth="250" 
            text="ENTER THE VOID"
            style="-fx-background-color: #800000;
                   -fx-background-radius: 20;
                   -fx-text-fill: white;
                   -fx-font-size: 14px;
                   -fx-effect: dropshadow(three-pass-box, rgba(255,0,0,0.6), 10, 0, 0, 0);" />
            
    <Label fx:id="errorLabel" style="-fx-text-fill: #ff0000;" />
</VBox>
